    // è®°å½•å½“å‰äº®åº¦/å¯¹æ¯”åº¦å‚æ•°ï¼ˆä¸æ‹·è´åƒç´ ï¼‰
    await this.pushHistorySnapshot(false)

    // brightnessLevel å–ä¸€ä¸ªç›¸å¯¹æ¸©å’Œçš„åŒºé—´ï¼Œé˜²æ­¢å´©å
    this.brightnessLevel += delta

    const MAX_LEVEL: number = 0.5 // å¤§çº¦ +128
